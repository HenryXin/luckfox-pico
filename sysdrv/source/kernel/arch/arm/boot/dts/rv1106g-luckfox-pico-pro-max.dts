/dts-v1/;

#include "rv1106.dtsi"
#include "rv1106-evb.dtsi"
#include "rv1106-luckfox-pico-pro-max-ipc.dtsi"

/ {
	model = "Luckfox Pico Max";
	compatible = "rockchip,rv1103g-38x38-ipc-v10", "rockchip,rv1106";
    vcc_gpio1_c7: vcc-gpio1-c7 {
        compatible = "regulator-fixed";
        regulator-name = "vcc_gpio1_c7";
        regulator-always-on;
        regulator-boot-on;
        regulator-min-microvolt = <3300000>;
        regulator-max-microvolt = <3300000>;
        gpio = <&gpio1 RK_PC7 GPIO_ACTIVE_HIGH>;
        enable-active-high;
        pinctrl-names = "default";
        pinctrl-0 = <&gpio1_pc7_pull_up>;
    }
};

/**********FLASH**********/
&sfc {
	status = "okay";
	flash@0 {
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <75000000>;
		spi-rx-bus-width = <4>;
		spi-tx-bus-width = <1>;
	};
	
};

/**********SDMMC**********/
&sdmmc {
	max-frequency = <50000000>;
	no-sdio;
	no-mmc;
	bus-width = <4>;
	cap-mmc-highspeed;
	cap-sd-highspeed;
	disable-wp;
	pinctrl-names = "default";
	pinctrl-0 = <&sdmmc0_clk &sdmmc0_cmd &sdmmc0_det &sdmmc0_bus4>;
	status = "okay";
};

/**********ETH**********/
&gmac {
	status = "okay";
};

/**********USB**********/
&usbdrd_dwc3 {
	status = "okay";
	dr_mode = "peripheral";
};

/**********SPI**********/
&spi0 {
	status = "okay";
	pinctrl-0 = <&spi0m0_clk &spi0m0_mosi &spi0m0_cs0>;
	spidev@0 {
		compatible = "rockchip,spidev";
		status = "disabled";
		reg = <0>;
		spi-max-frequency = <50000000>;
	};
	fbtft@0 {
		compatible = "sitronix,st7789v";
		reg = <0>;
		spi-max-frequency = <20000000>;
		fps = <30>;
		buswidth = <8>;
		debug = <0x7>;
		pinctrl-names = "default";
		pinctrl-0 = <&st7789v_pins>;
		led-gpios = <&gpio1 RK_PC3 GPIO_ACTIVE_LOW>;
		dc-gpios = <&gpio1 RK_PC4 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio1 RK_PC5 GPIO_ACTIVE_LOW>;
		status = "okay";
	};
};

/**********I2C**********/
/* I2C3_M1 */
&i2c3 {
	status = "disabled";
	clock-frequency = <100000>;
};

/* I2C1_M1 */
&i2c1 {
	status = "disabled";
	clock-frequency = <100000>;
};


/**********UART**********/
/* UART3_M1 */
&uart3 {
	status = "disabled";
};

/* UART4_M1 */
&uart4 {
	status = "disabled";
};

/**********RTC**********/
&rtc {
	status = "okay";
};

/**********PINCTRL**********/
&pinctrl {
	gpio1-pc7 {
		gpio1_pc7_pull_up: gpio1-pc7-pull-up {
			rockchip,pins = <1 RK_PC7 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};

	st7789v {
		st7789v_pins: st7789v-pins {
			rockchip,pins =
				<1 RK_PC3 RK_FUNC_GPIO &pcfg_pull_none>,
				<1 RK_PC4 RK_FUNC_GPIO &pcfg_pull_none>,
				<1 RK_PC5 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};
};
